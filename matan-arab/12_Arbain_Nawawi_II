8;&#1607;&#1615;&#1605;&#1614;&#1575;&#1548;  &#1593;&#1614;&#1606;&#1618; &#1585;&#1614;&#1587;&#1615;&#1608;&#1618;&#1604;&#1616;  &#1575;&#1604;&#1604;&#1607;&#1616; &#1589;&#1614;&#1604;&#1609;  &#1575;&#1604;&#1604;&#1607; &#1593;&#1604;&#1610;&#1607;  &#1608;&#1587;&#1604;&#1605; &#1601;&#1616;&#1610;&#1618;&#1605;&#1614;&#1575;  &#1610;&#1614;&#1585;&#1618;&#1608;&#1616;&#1610;&#1618;&#1607;&#1616;  &#1593;&#1614;&#1606;&#1618; &#1585;&#1614;&#1576;&#1617;&#1616;&#1607;&#1616;  &#1578;&#1614;&#1576;&#1614;&#1575;&#1585;&#1614;&#1603;&#1614;  &#1608;&#1614;&#1578;&#1614;&#1593;&#1614;&#1575;&#1604;&#1614;&#1609; :  &#1573;&#1616;&#1606;&#1617;&#1614; &#1575;&#1604;&#1604;&#1607;&#1614;  &#1603;&#1614;&#1578;&#1614;&#1576;&#1614;  &#1575;&#1604;&#1618;&#1581;&#1614;&#1587;&#1614;&#1606;&#1614;&#1575;&#1578;&#1616;  &#1608;&#1614;&#1575;&#1604;&#1587;&#1617;&#1614;&#1610;&#1617;&#1616;&#1574;&#1614;&#1575;&#1578;&#1616;&#1548;  &#1579;&#1615;&#1605;&#1617;&#1614;  &#1576;&#1614;&#1610;&#1617;&#1614;&#1606;&#1614;  &#1584;&#1614;&#1604;&#1616;&#1603;&#1614; :  &#1601;&#1614;&#1605;&#1614;&#1606;&#1618; &#1607;&#1614;&#1605;&#1617;&#1614;  &#1576;&#1616;&#1581;&#1614;&#1587;&#1614;&#1606;&#1614;&#1577;&#1613;  &#1601;&#1614;&#1604;&#1614;&#1605;&#1618;  &#1610;&#1614;&#1593;&#1618;&#1605;&#1614;&#1604;&#1618;&#1607;&#1614;&#1575;  &#1603;&#1614;&#1578;&#1614;&#1576;&#1614;&#1607;&#1614;&#1575;  &#1593;&#1616;&#1606;&#1618;&#1583;&#1614;&#1607;&#1615;  &#1581;&#1614;&#1587;&#1614;&#1606;&#1614;&#1577;&#1611;  &#1603;&#1614;&#1575;&#1605;&#1616;&#1604;&#1614;&#1577;&#1611;&#1548;  &#1608;&#1614;&#1573;&#1616;&#1606;&#1618; &#1607;&#1614;&#1605;&#1617;&#1614;  &#1576;&#1616;&#1607;&#1614;&#1575;  &#1601;&#1614;&#1593;&#1614;&#1605;&#1616;&#1604;&#1614;&#1607;&#1614;&#1575;  &#1603;&#1614;&#1578;&#1614;&#1576;&#1614;&#1607;&#1614;&#1575;  &#1575;&#1604;&#1604;&#1607;&#1615;  &#1593;&#1616;&#1606;&#1618;&#1583;&#1614;&#1607;&#1615; &#1593;&#1614;&#1588;&#1618;&#1585;&#